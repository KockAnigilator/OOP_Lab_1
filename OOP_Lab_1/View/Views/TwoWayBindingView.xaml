<UserControl x:Class="View.Views.TwoWayBindingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="12" Margin="0 0 0 8" CornerRadius="6" Background="#FF243044">
            <StackPanel>
                <TextBlock Text="TwoWayBinding (двухсторонняя привязка)"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0 0 0 4" />
                <TextBlock Text="Сравнение прямой привязки к окну и привязки к ViewModel с UpdateSourceTrigger=PropertyChanged."
                           Foreground="#FFB0B8C5"
                           FontSize="12" />
            </StackPanel>
        </Border>

        <!-- Прямая привязка к свойству окна -->
        <Border Grid.Row="1" Padding="12" Margin="0 0 0 8" CornerRadius="6" Background="#FF1B2433">
            <StackPanel>
                <TextBlock Text="Прямая привязка (TwoWay) к свойству окна"
                           Foreground="#FF9CC1FF"
                           FontWeight="SemiBold" />

                <TextBox Margin="0 6 0 4"
                         Height="28"
                         Background="#FF101726"
                         Foreground="White"
                         BorderBrush="#FF3D5A80"
                         BorderThickness="1"
                         Text="{Binding TextFromWindow,
                                        RelativeSource={RelativeSource AncestorType=Window},
                                        Mode=TwoWay,
                                        UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.ToolTip>
                        <TextBlock Text="Двухсторонняя привязка к свойству окна. Источник обновляется при каждом изменении текста."
                                   TextWrapping="Wrap" />
                    </TextBox.ToolTip>
                </TextBox>

                <TextBlock Text="Текущее значение свойства окна:"
                           Foreground="#FFB0B8C5"
                           FontSize="12" />
                <TextBlock Text="{Binding TextFromWindow, RelativeSource={RelativeSource AncestorType=Window}}"
                           Foreground="White"
                           FontWeight="Bold" />
            </StackPanel>
        </Border>

        <!-- Привязка через ViewModel -->
        <Border Grid.Row="2" Padding="12" Margin="0 0 0 8" CornerRadius="6" Background="#FF1B2433">
            <StackPanel>
                <TextBlock Text="Привязка через ViewModel (Name, IsEnabled, Volume)"
                           Foreground="#FF9CC1FF"
                           FontWeight="SemiBold" />

                <StackPanel Margin="0 6 0 4">
                    <TextBlock Text="Имя (TextBox, TwoWay, PropertyChanged)"
                               Foreground="#FFB0B8C5"
                               FontSize="12" />
                    <TextBox Height="28"
                             Background="#FF101726"
                             Foreground="White"
                             BorderBrush="#FF3D5A80"
                             BorderThickness="1"
                             Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Margin="0 4 0 0"
                               Text="{Binding Name, StringFormat='Текущее значение: {0}'}"
                               Foreground="White" />
                </StackPanel>

                <StackPanel Margin="0 6 0 4" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                              VerticalAlignment="Center"
                              Margin="0 0 8 0" />
                    <TextBlock Text="Включено (TwoWay к CheckBox)"
                               Foreground="#FFB0B8C5"
                               VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Margin="0 6 0 0">
                    <TextBlock Text="Громкость (Slider, TwoWay)"
                               Foreground="#FFB0B8C5"
                               FontSize="12" />
                    <Slider Minimum="0"
                            Maximum="100"
                            Value="{Binding Volume, Mode=TwoWay}"
                            IsEnabled="{Binding IsEnabled}" />
                    <ProgressBar Height="10"
                                 Margin="0 4 0 0"
                                 Minimum="0"
                                 Maximum="100"
                                 Value="{Binding Volume}"
                                 IsEnabled="{Binding IsEnabled}" />
                    <TextBlock Text="{Binding Volume, StringFormat='Текущее значение громкости: {0:F0}%'}"
                               Foreground="White"
                               Margin="0 2 0 0" />
                </StackPanel>
            </StackPanel>
        </Border>

        <TextBlock Grid.Row="3"
                   Margin="0 8 0 0"
                   TextWrapping="Wrap"
                   Foreground="#FF8A96A8"
                   FontSize="11">
            Двухсторонняя привязка обеспечивает синхронизацию значения между UI и источником данных.
            Для TextBox с UpdateSourceTrigger=PropertyChanged обновление происходит на каждое изменение текста.
        </TextBlock>
    </Grid>
</UserControl>

