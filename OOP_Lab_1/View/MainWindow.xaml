<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:View.Views"
        mc:Ignorable="d"
        Title="MVVM Binding Demo"
        Height="450"
        Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF1E2533">
        <TabControl Margin="12">
            <TabItem Header="DefaultBinding">
                <views:DefaultBindingView />
            </TabItem>
            <TabItem Header="TwoWayBinding">
                <views:TwoWayBindingView />
            </TabItem>
            <TabItem Header="OneTimeBinding">
                <views:OneTimeBindingView />
            </TabItem>
            <TabItem Header="OneWayBinding">
                <views:OneWayBindingView />
            </TabItem>
            <TabItem Header="Triggers">
                <views:TriggersView />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
